{
  "name": "rails-buddy",
  "displayName": "Rails Buddy",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:erb"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rails-buddy.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "rails-buddy.toggleTurboFrames.on",
        "title": "Rails Buddy: Toggle Turbo Frame Highlighting On"
      },
      {
        "command": "rails-buddy.toggleTurboFrames.off",
        "title": "Rails Buddy: Toggle Turbo Frame Highlighting Off"
      },
      {
        "command": "rails-buddy.toggleClassAttributes.on",
        "title": "Rails Buddy: Toggle Class Attributes Folding On",
        "when": "false"
      },
      {
        "command": "rails-buddy.toggleClassAttributes.off",
        "title": "Rails Buddy: Toggle Class Attributes Folding Off",
        "when": "railsBuddy.classAttributesFolded != true"
      },
      {
        "command": "rails-buddy.toggleEmphasizedRuby.on",
        "title": "Rails Buddy: Toggle Emphasized Ruby On",
        "when": "railsBuddy.emphasizedRubyEnabled == true"
      },
      {
        "command": "rails-buddy.toggleEmphasizedRuby.off",
        "title": "Rails Buddy: Toggle Emphasized Ruby Off",
        "when": "railsBuddy.emphasizedRubyEnabled != true"
      },
      {
        "command": "rails-buddy.foldSvg",
        "title": "Rails Buddy: Fold SVG Tags"
      },
      {
        "command": "rails-buddy.expandSvg",
        "title": "Rails Buddy: Expand SVG Tags"
      },
      {
        "command": "rails-buddy.temporarilyExpand",
        "title": "Temporarily Expand Class Attribute",
        "enablement": "false"
      }
    ],
    "configuration": {
      "title": "Rails Buddy",
      "properties": {
        "railsBuddy.highlightMode": {
          "type": "string",
          "enum": ["always", "whenInBlock"],
          "default": "whenInBlock",
          "description": "Controls when Ruby code should be emphasized in ERB templates"
        },        
        "rails-buddy.toggleWordWrapWithFolding": {
          "type": "boolean",
          "default": false,
          "description": "Toggle word wrap when folding class attributes"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "rails-buddy.toggleTurboFrames.on",
          "when": "!railsBuddy.turboFramesEnabled"
        },
        {
          "command": "rails-buddy.toggleTurboFrames.off",
          "when": "railsBuddy.turboFramesEnabled"
        },
        {
          "command": "rails-buddy.toggleClassAttributes.on",
          "when": "!railsBuddy.classAttributesFolded"
        },
        {
          "command": "rails-buddy.toggleClassAttributes.off",
          "when": "railsBuddy.classAttributesFolded"
        },
        {
          "command": "rails-buddy.toggleEmphasizedRuby.on",
          "when": "!railsBuddy.emphasizedRubyEnabled"
        },
        {
          "command": "rails-buddy.toggleEmphasizedRuby.off",
          "when": "railsBuddy.emphasizedRubyEnabled"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
